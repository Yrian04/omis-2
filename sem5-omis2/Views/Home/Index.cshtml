@{
    ViewData["Title"] = "Система управления мероприятиями";
}

<style>
    .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    }

    .sidebar {
    margin-right: 20px;
    }

    .sidebar img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 2px solid #1E90FF;
    }

    .menu {
    background-color: #333;
    border-radius: 10px;
    padding: 10px;
    width: 100%;
    }

    .menu-item {
    background-color: #333;
    color: white;
    padding: 10px;
    margin: 5px 0;
    border-radius: 5px;
    text-decoration: none;
    display: block;
    }

    .menu-item:hover {
    background-color: #1E90FF;
    }

    .menu-item-active {
    background-color: #1E90FF;
    color: white;
    }

    .header {
    font-size: 20px;
    margin-bottom: 20px;
    }
</style>

<div class="container">
    <div class="menu">
        <div class="header">СИСТЕМА УПРАВЛЕНИЯ МЕРОПРИЯТИЯМИ</div>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a href="@Url.Action("Logout", "Account")" class="menu-item">Выйти</a>
        }
        else
        {
            <a href="@Url.Action("Register", "Account")" class="menu-item ">Регистрация</a>
            <a href="@Url.Action("Login", "Account")" class="menu-item">Войти</a>
        }<hr>
        <a href="@Url.Action("Create", "Event")" class="menu-item">Создать мероприятие</a>
        <a href="@Url.Action("Index", "Event")" class="menu-item">Список мероприятий</a>
        <a href="@Url.Action("Index", "EventGroup")" class="menu-item">Управление группами мероприятий</a>
        <a href="@Url.Action("Index", "Report")" class="menu-item">Получить отчёт</a>
    </div>
</div>
