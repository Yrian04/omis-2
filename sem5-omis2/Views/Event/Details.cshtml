@model lab2.Models.Event

@{
    ViewData["Title"] = "Подробнее о мероприятии";
}

<h3>@Model.Name</h3>

<div class="card">
    <div class="card-header">
        <h4>Описание</h4>
    </div>
    <div class="card-body">
        <p><strong>Описание:</strong> @Model.Description</p>
        <p><strong>Дата:</strong> @Model.Date.ToString("dd/MM/yyyy")</p>
        <p><strong>Локация:</strong> @Model.Location</p>
        <p><strong>Формат:</strong> @Model.Format</p>
        <p><strong>Макс. количество участников:</strong> @Model.MaxParticipants</p>
        <p><strong>Стоимость:</strong> @Model.Cost.ToString("C")</p>
    </div>
</div>

<a href="@Url.Action("List", "Event")" class="btn btn-primary mt-3">Назад к списку</a>
