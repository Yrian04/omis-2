@model IEnumerable<lab2.Models.Event>

@{
    ViewData["Title"] = "Список мероприятий";
}

<h3>Список мероприятий</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Дата</th>
            <th>Локация</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Name</td>
                <td>@e.Description</td>
                <td>@e.Date.ToString("dd/MM/yyyy")</td>
                <td>@e.Location</td>
                <td>
                    <a href="@Url.Action("Details", "Event", new { id = e.Id })" class="btn btn-info">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>
