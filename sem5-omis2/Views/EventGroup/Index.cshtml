@model IEnumerable<sem5_omis2.Models.EventGroup>

<h2>Группы мероприятий</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Создать группу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название группы</th>
            <th>Тема</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.GroupName</td>
                <td>@group.Theme</td>
                <td>
                    <a href="@Url.Action("Details", "EventGroup", new { id = group.Id })" class="btn btn-info">Посмотреть</a>
                    <a href="@Url.Action("AddEvent", "EventGroup", new { groupId = group.Id })" class="btn btn-info">Добавить мероприятие</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary mt-3" href="@Url.Action("Index", "Home")" type="button">Назад</a>